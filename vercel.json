{
  "version": 2,
  "builds": [
    {
      "src": "app/api/*.py",
      "use": "@vercel/python",
      "config": {
        "excludeFiles": ".next/**, *.cache/**, node_modules/**, public/**, app/**"
      }
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { 
      "src": "/app/api/webhook", 
      "dest": "/app/api/webhook.py" 
    }
  ]
}